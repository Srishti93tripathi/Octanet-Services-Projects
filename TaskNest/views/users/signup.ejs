<% layout("/layouts/boilerplate.ejs") -%>
<body>
      
      <div class="row">
        <h1 class="col-8 offset-4">Signup For TaskNest</h1>
        <br><br>
        <div class="col-6 offset-3">
            <form method="POST" action="/signup" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label for="username" class="form-lable" >Username</label>
                    <input
                      name="username" 
                      id="username"
                      type="text"
                      class="form-control"
                      required>
                      <div class="valid-feedback">Username looks good</div>
                  </div> 

                  <div class="mb-3">
                    <label for="email" class="form-lable" >Email</label>
                    <input
                      name="email" 
                      id="email"
                      type="email"
                      placeholder="Enter a valid email"
                      class="form-control"
                      required>
                  </div> 

                  <div class="mb-3">
                    <label for="password" class="form-lable" >Password</label>
                    <input
                      name="password" 
                      id="password"
                      type="password"
                      placeholder="Enter password"
                      class="form-control"
                      required>
                      <div class="valid-feedback">Password looks good</div>
                  </div> 
                  <button class="btn btn-success">Signup</button>
            </form>
        </div>
    </div>      