        <form action="/tasks" method="post" class="row g-3 needs-validation offset-2" novalidate>
        <div class="col-md-4 position-relative">
          <label for="validationCustom03" class="form-label">Add your Task</label>
          <input type="text" name="task[data]" class="form-control" id="validationCustom03" required>
          <div class="invalid-feedback position-absolute">
            Please provide a valid city.
          </div>
        </div>
        <div class="col-md-2 position-relative">
          <label for="validationCustom04" class="form-label">Date</label>
          <input class="form-control" name="task[date]" type="date" id="validationCustom04" required>
          <div class="invalid-feedback position-absolute">
            Please select a valid date.
          </div>
        </div>
        <div class="col-md-2 position-relative">
          <label for="validationCustom05" class="form-label">Time</label>
          <input type="time" class="form-control" name="task[time]" id="validationCustom05" required>
          <div class="invalid-feedback position-absolute">
            Please enter time.
          </div>
        </div>
        <div class="col-md-2 align-self-end">
          <button class="btn btn-dark" type="submit" style="margin-right: 60px !important; ">Add Task</button>
        </div>
